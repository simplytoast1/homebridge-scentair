{
    "pluginAlias": "ScentAir",
    "pluginType": "platform",
    "singular": true,
    "headerDisplay": "ScentAir Configuration",
    "footerDisplay": "For support, visit the GitHub repository.",
    "schema": {
        "type": "object",
        "properties": {
            "name": {
                "title": "Name",
                "type": "string",
                "default": "ScentAir",
                "description": "The name of the platform."
            },
            "email": {
                "title": "Email",
                "type": "string",
                "format": "email"
            },
            "password": {
                "title": "Password",
                "type": "string",
                "format": "password"
            },
            "showBacklight": {
                "title": "Show Backlight (Logo)",
                "type": "boolean",
                "default": true,
                "description": "Expose the device backlight (logo light) to HomeKit."
            },
            "showAccentLight": {
                "title": "Show Accent Light",
                "type": "boolean",
                "default": true,
                "description": "Expose the device accent light (LED ring) to HomeKit."
            }
        },
        "required": [
            "email",
            "password"
        ]
    }
}